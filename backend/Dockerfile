# Use Node.js 18 Alpine for smaller image size
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci --only=production

# Copy source code
COPY . .

# Compile TypeScript
RUN npm run compile

# Expose port
EXPOSE 4000

# Start the application
CMD ["npm", "start"] 